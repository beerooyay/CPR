{
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "source": "functions"
  },
  "hosting": {
    "public": "web",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/databaseContext",
        "function": "databaseContext"
      },
      {
        "source": "/api/leagueStats", 
        "function": "leagueStats"
      },
      {
        "source": "/api/rankings",
        "function": "rankings"
      },
      {
        "source": "/api/teamRoster",
        "function": "teamRoster"
      },
      {
        "source": "/api/chat",
        "function": "chat"
      },
      {
        "source": "/api/health",
        "function": "health"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
